extends layout

block content
  h1= title
  p Mat results
  div(class="container-fluid")
        div(class="row")
            -
                let items = [
                    {
                        "color": "Blue",
                        "length": "10",
                        "cost": 100
                    },
                    {
                       "color": "Orange",
                        "length": "15",
                        "cost": 110
                    },
                    {
                       "color": "Green",
                        "length": "15",
                        "cost": 150
                    },                   
                ]
            each item in items
              div(class="row-sm-2", class="m-1") Item #{item.color}(#{item.length}) is #{item.cost}
                button.btn( class="btn-primary ml-1", onclick= destination) Update

                